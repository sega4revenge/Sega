<resources>

    <!-- Base application themes -->
    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">

        <item name="android:textColor">@color/bg_screen1</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/bg_screen1</item>
        <item name="android:colorBackground">@color/backgroundlayout</item>
        <item name="android:colorForeground">@color/foreground</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/primary</item>


    </style>
    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        ...
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppDetail" parent="AppTheme.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>
    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/action_share</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">"Share"</item>
    </style>

    <!-- File Picker Themes -->



    <!-- Toolbar Styles -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Detail Activity Buttons -->

    <!-- Detail Activity Item -->
    <style name="MovieItemIconsStyle">
        <item name="android:layout_height">@dimen/detail_icon_size</item>
        <item name="android:layout_width">@dimen/detail_icon_size</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="EditTextTintTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primaryText</item>
    </style>
    <style name="MovieItemHeaderStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dist_medium</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="MovieItemValueStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dist_medium</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Detail Activity Crew Style -->
    <style name="MovieCrewItemValueStyle" parent="@style/MovieItemValueStyle">


    </style>

    <!-- Detail Activity Cast Style -->
    <style name="MovieCastHolderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dist_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Detail Activity See All Button -->
    <style name="MovieSeeAllHolderStyle">
        <item name="android:layout_height">@dimen/detail_see_all_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dist_small</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MovieSeeAllTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/detail_button_see_all</item>
    </style>

    <style name="MovieSeeAllArrowStyle">
        <item name="android:layout_height">@dimen/detail_arrow_size</item>
        <item name="android:layout_width">@dimen/detail_arrow_size</item>
        <item name="android:layout_marginLeft">@dimen/dist_small</item>
        <item name="android:src">@drawable/icon_arrow_right</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Review Activity -->

    <style name="ReviewAuthorStyle" parent="MovieItemHeaderStyle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="ReviewBodyStyle" parent="MovieItemValueStyle">
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="customRatingBar"
           parent="android:style/Widget.Material.RatingBar.Small">

    </style>
    <style name="AppThemeFullScreenImage" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreen.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="FullScreen.TextAppearance.Title.Inverse" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
